<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.gstraymond">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".android.CustomApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name">

        <!-- MAIN : Splash screen -->
        <activity
            android:name=".android.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="magic-card-search.com"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.actions.SEARCH_ACTION"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <!-- Card list -->
        <activity
            android:name=".android.CardListActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name" />

        <!-- Card detail -->
        <activity
            android:name=".android.CardDetailActivity"
            android:parentActivityName=".android.CardListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".android.CardListActivity" />
        </activity>

        <!-- Card detail -->
        <activity
            android:name=".android.CardPagerActivity"
            android:parentActivityName=".android.CardDetailActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".android.CardDetailActivity" />
        </activity>

        <!-- Help -->
        <activity
            android:name=".android.HelpActivity"
            android:label="@string/list_menu_help" />

        <!-- History -->
        <activity
            android:name=".android.HistoryActivity"
            android:label="@string/list_menu_history"
            android:parentActivityName=".android.CardListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".android.CardListActivity" />
        </activity>
        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="f5b7e9047975b71a4f542065a3016e1fbcab379f" />
    </application>

</manifest>