<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/deck_detail_cards_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/deck_detail_cards_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/deck_detail_cards_total"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/deck_detail_cards_quantity"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/deck_detail_cards_total"
                android:paddingBottom="8dp"
                android:text="@string/quantity" />

            <TextView
                android:id="@+id/deck_detail_cards_sideboard"
                style="@android:style/TextAppearance.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/deck_detail_cards_total"
                android:layout_toLeftOf="@id/deck_detail_cards_quantity"
                android:text="@string/sideboard" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/deck_detail_cards_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/deck_detail_cards_block" />
    </RelativeLayout>

    <TextView
        android:id="@+id/deck_detail_cards_empty"
        style="@android:style/TextAppearance.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="@string/deckdetails_cards_empty" />
</RelativeLayout>
