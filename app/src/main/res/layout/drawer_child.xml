<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/drawer_child_counter_active"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_border_active"
        android:gravity="center_horizontal"
        android:minWidth="32dp"
        android:textColor="@android:color/white"
        tools:text="888" />

    <TextView
        android:id="@+id/drawer_child_counter_inactive"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/counter_border_inactive"
        android:gravity="center_horizontal"
        android:minWidth="32dp"
        android:textColor="@android:color/background_dark"
        tools:text="888" />

    <TextView
        android:id="@+id/drawer_child_text"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        tools:text="legacy" />

</LinearLayout>