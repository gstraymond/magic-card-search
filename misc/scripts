# conversion gif -> png
find -name "*.gif" -exec mogrify -format png {} \;

#Â suppression recursive
find -name "*.gif" | xargs rm -v

#script pngcrush recursif
#!/bin/sh
for png in `find $1 -name "*.png"`;
do
	echo "crushing $png"	
	pngcrush -brute "$png" temp.png
	mv -f temp.png $png
done;

# execution de pngcrush
~/pngcrush.brute.sh .